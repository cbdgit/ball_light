<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:horizontalSpacing="10dp"
    android:columnCount="3"
    >

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/home"
        />
    <ImageView
        android:id="@+id/image_outside"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/outside"
        />
    <ImageView
        android:id="@+id/image_dinner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/dinner"
        />
    <ImageView
        android:id="@+id/image_theatre"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/theatre"
        />
    <ImageView
        android:id="@+id/image_bed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/bed"
        />
    <ImageView
        android:id="@+id/image_sleep"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/sleep"
        />
    <ImageView
        android:id="@+id/image_theatre"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/theatre"

        />
    <ImageView
        android:id="@+id/image_birthday"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/birthday"
        />
    <ImageView
        android:id="@+id/image_celebrate"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/celebrate"
        />
    <ImageView
        android:id="@+id/image_add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:src="@drawable/add"
        />

</GridLayout>
